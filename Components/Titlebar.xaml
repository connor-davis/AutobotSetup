<UserControl x:Class="AutobotSetup.Components.Titlebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AutobotSetup.Components"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        
        <Label x:Name="DragArea" MouseDown="DragArea_OnMouseDown" Grid.Column="0" VerticalAlignment="Center" Content="Autobot Setup" Foreground="#FFFFFFFF" />
        
        <Button x:Name="CloseBtn" Click="CloseBtn_OnClick" Grid.Column="1" VerticalAlignment="Center" Style="{StaticResource CloseButton}" Foreground="#FFFFFFFF" Content="✕"></Button>
    </Grid>
</UserControl>
